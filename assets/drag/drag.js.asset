let element = getElement(context);
let mouseMove = Rx.DOM.mousemove(document.body)
                .tap((e)=>e.preventDefault());
let mouseUp = Rx.DOM.mouseup(document.body); 

let drags = Rx.DOM.mousedown(element)
          .concatMap((e)=>
            mouseMove
              .map((e)=> ({x:e.clientX, y:e.clientY}) )
              .tap(({x,y}) => moveTo(element, x, y))
              .takeUntil(mouseUp)
              .doOnCompleted(backToPosition(element))
              ).subscribe();
